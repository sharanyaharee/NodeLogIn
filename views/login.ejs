
<%- include('./partials/head.ejs')%>
    
    <div class="row d-flex  align-items-center mt-5">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
         
            <form  id="form" action="/" method="POST" class="border rounded bg-light my-3 mx-1 py-3 px-3">
                <% if (locals.message) { %>
                     <h5 class="loggedout"><%= locals.message %></h5>
                <% } %> 
               
                <% if (locals.warn) { %>
                    <h5 class="loggedout"><%= locals.warn %></h5>
               <% } %> 
            

                <h4 class="text-center">LogIn</h4>
                <div class="form-group">
                  
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control pb-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
            
                  <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                </div>
                <br>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
                </div>
                <br>               
                <br>
                <button type="submit" style="width:100%" class=" btn-block btn btn-primary">LogIn</button>
              <p>Don't have an account? <a href="/register"><h6>Register</h6></a></p>
            
            </form>
            
        </div>
        <div class="col-md-4">
            
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>

